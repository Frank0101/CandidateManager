@using CandidateManager.Web.ViewModels

@model IEnumerable<CandidateViewModel>

@{
    const string title = "Candidates";
    ViewBag.Title = title;
}

<h2>@title</h2>
<hr />

<div class="panel panel-default">
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
            </th>
        </tr>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => candidate.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => candidate.Surname)
                </td>
                <td>
                    @Html.DisplayFor(model => candidate.Email)
                </td>
                <td class="text-right">
                    <div class="btn-group">
                        <a class="btn btn-info" title="New Session"
                           href="@Url.Action("CreateByCandidate", "Sessions", new { id = candidate.Id })">
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                        <a class="btn btn-primary" title="Detail" href="@Url.Action("Detail", new { id = candidate.Id })">
                            <span class="glyphicon glyphicon-eye-open"></span>
                        </a>
                        <a class="btn btn-danger" title="Delete" href="@Url.Action("Delete", new { id = candidate.Id })">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

<div>
    <a class="btn btn-primary" title="New Candidate" href="@Url.Action("Create")">
        New Candidate
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/dangerbuttonconfirmation")
}
