@using CandidateManager.Web.Extensions
@using CandidateManager.Web.ViewModels

@model CandidateViewModel

@{
    const string title = "Candidate Details";
    ViewBag.Title = title;
}

<h2>@title</h2>
<hr />

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.RenderCandidateManagerField(model => model.Name)
        @Html.RenderCandidateManagerField(model => model.Surname)
        @Html.RenderCandidateManagerField(model => model.Email)
        @Html.RenderCandidateManagerField(model => model.Phone)
        @Html.RenderCandidateManagerField(model => model.Notes)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" title="Update" />
                <a class="btn btn-default" title="Back" href="@Url.Action("List")">
                    Back
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
